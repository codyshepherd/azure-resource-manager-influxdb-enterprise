{
    "min_packer_version": "0.12.0",
    "variables": {
        "subscription_id": "{{env `AZURE_SUBSCRIPTION_ID`}}",
        "region": "centralus",
        "listing_type": "billing",
        "influxdb_version": "1.7.9",
        "telegraf_version": "1.12.6"
    },
    "builders": [
        {
            "name": "azure",
            "type": "azure-arm",

            "subscription_id": "{{user `subscription_id`}}",
            "client_id": "c2801e14-85e5-4653-aff9-7c5a2989c09c",
            "client_secret": "03b80059-e53e-4ecc-90c4-c753623f6b17",

            "capture_container_name": "marketplace",
            "capture_name_prefix": "Data{{isotime \"200601020304\"}}",
            "resource_group_name": "partnerEng",
            "storage_account": "influxdata",
            "vm_size": "Standard_B2s",
            "location": "southcentralus",

            "os_type": "Linux",
            "image_publisher": "Canonical",
            "image_offer": "UbuntuServer",
            "image_sku": "18.04-LTS",

            "azure_tags": {
                "purpose": "marketplace-dev"
            },
            "ssh_username": "ubuntu"
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "pause_before": "30s",
            "inline": [
                "sudo DEBIAN_FRONTEND=noninteractive apt-get update -y",
                "sudo apt-get install -y jq"
            ]
        },
        {
            "type": "file",
            "source": "./config",
            "destination": "/tmp"
        },
        {
            "type": "file",
            "source": "./scripts",
            "destination": "/tmp"
        },
        {
            "type": "shell",
            "inline": [
                "sudo /tmp/scripts/setup-influxdb-data.sh {{ user `influxdb_version` }}",
                "sudo /tmp/scripts/setup-telegraf.sh {{ user `telegraf_version` }} data",
                "sudo rm -r /tmp/scripts /tmp/config",
                "rm .ssh/authorized_keys ; sudo rm /root/.ssh/authorized_keys",
                "sudo waagent -deprovision+user"
            ]
        }
    ]
}