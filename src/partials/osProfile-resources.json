{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json# ",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "computerName": {
            "type": "string"
        },
        "adminUsername": {
            "type": "securestring"
        },
        "password": {
            "type": "object",
            "defaultValue": {
                "password": "changeMe!4",
                "sshPublicKey": null,
                "authenticationType": "password"
            }
        }
    },
    "variables": {
        "password_osProfile": {
            "computername": "[parameters('computerName')]",
            "adminUsername": "[parameters('adminUsername')]",
            "adminPassword": "[if(empty(parameters('password').password), json('null'), parameters('password').password)]"
        },
        "sshPublicKey_osProfile": {
            "computername": "[parameters('computerName')]",
            "adminUsername": "[parameters('adminUsername')]",
            "linuxConfiguration": {
                "disablePasswordAuthentication": "true",
                "ssh": {
                    "publicKeys": [
                        {
                            "path": "[concat('/home/', parameters('adminUsername'), '/.ssh/authorized_keys')]",
                            "keyData": "[if(empty(parameters('password').sshPublicKey), json('null'), parameters('password').sshPublicKey)]"
                        }
                    ]
                }
            }
        }
    },
    "resources": [],
    "outputs": {
        "osProfile": {
            "value": "[variables(concat(parameters('password').authenticationType, '_osProfile'))]",
            "type": "object"
        }
    }
}